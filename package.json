{
  "name": "sidekick",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Event common modules monorepo",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "test": "vitest run",
    "test:watch": "vitest",
    "e2e": "npx playwright install && playwright test",
    "build": "NODE_ENV=production turbo run build --parallel",
    "build:sb": "NODE_ENV=production turbo run build:sb --parallel",
    "start": "turbo run start --parallel",
    "start:sb": "turbo run start:sb --parallel",
    "lint": "turbo run lint:js lint:css",
    "lint:js": "turbo run lint:js --parallel",
    "lint:css": "turbo run lint:css --parallel",
    "prepare": "husky install",
    "ci:set-docs-env": "node .junkins/set-docs-env.js",
    "format": "prettier \"**/*.{html,json,md,js,jsx,ts,tsx,css,scss}\" --write --cache",
    "generate:outline": "node .scripts/generate-outline/index.js",
    "generate:outline-include": "node .scripts/generate-outline-include/index.js",
    "generate:update-cache": "node .scripts/update-cache/index.js",
    "release": "zx .scripts/release/index.js",
    "release:vup": "zx .scripts/release/version-up.js",
    "release:clean": "zx .scripts/release/clean.js",
    "release:output": "zx .scripts/release/output.js",
    "release:smoke": "node .scripts/release/smoke.js",
    "ship": "zx .scripts/ship/index.js"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@playwright/test": "^1.44.0",
    "@types/react": "18.2.36",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "axios": "^1.6.0",
    "babel-loader": "^9.1.3",
    "c8": "^8.0.1",
    "eslint": "^8.53.0",
    "eslint-config-next": "14.0.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.0.2",
    "postcss": "^8.4.31",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prompts": "^2.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.69.5",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-prettier": "^4.0.2",
    "stylelint-scss": "^5.3.1",
    "turbo": "2.1.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.6",
    "vitest": "^1.2.2",
    "zip-lib": "^0.7.3",
    "zx": "^7.2.3"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=20.9.0"
  },
  "packageManager": "pnpm@9.7.0",
  "lint-staged": {
    "{apps,packages}/**/*.{html,json,md,js,jsx,ts,tsx,css,scss}": [
      "prettier --write --cache"
    ],
    "{apps,packages}/**/*.{css,scss}": [
      "stylelint --fix --cache --allow-empty-input"
    ],
    "{apps,packages}/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache"
    ]
  }
}
